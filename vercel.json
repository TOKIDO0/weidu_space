{
  "buildCommand": "cd admin && npm install && npm run build",
  "outputDirectory": "admin/.next",
  "installCommand": "cd admin && npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/admin/(.*)", "destination": "/admin/$1" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*\\.html)", "destination": "/public/$1" },
    { "source": "/(.*)", "destination": "/admin/$1" }
  ],
  "crons": [
    {
      "path": "/api/schedule-notifications",
      "schedule": "0 8 * * *"
    }
  ]
}







